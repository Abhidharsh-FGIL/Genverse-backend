# ============================================================
# Eduverse / Genverse.ai Backend - Environment Variables
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
# ============================================================

# -------------------------------------------------------
# Application Settings
# -------------------------------------------------------
APP_NAME="Genverse.ai"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=development

# -------------------------------------------------------
# Server Settings
# -------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# -------------------------------------------------------
# PostgreSQL Database
# Provide individual values â€” the application builds the
# connection URLs automatically from these fields.
# -------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eduverse_db
DB_USER=postgres
DB_PASSWORD=your_password

# -------------------------------------------------------
# JWT / Authentication
# -------------------------------------------------------
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(64))"
SECRET_KEY=your_super_secret_key_here_change_this_in_production
ALGORITHM=HS256
# Access token lifetime in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60
# Refresh token lifetime in days
REFRESH_TOKEN_EXPIRE_DAYS=30

# -------------------------------------------------------
# AI Provider Keys
# -------------------------------------------------------
# Google Gemini API key (primary AI model)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API key (fallback / supplementary)
OPENAI_API_KEY=your_openai_api_key_here

# Primary AI model to use
AI_PRIMARY_MODEL=gemini-2.5-flash
AI_FALLBACK_MODEL=gpt-4o-mini

# -------------------------------------------------------
# File Storage
# -------------------------------------------------------
# Local filesystem storage root (absolute path)
STORAGE_ROOT=/home/abhidharsh-fgil/FGIL Projects/Eduverse/eduverse-backend/uploads

# Max upload size in MB (per file)
MAX_UPLOAD_SIZE_MB=50

# -------------------------------------------------------
# Redis (for caching & background tasks)
# -------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -------------------------------------------------------
# Email (optional - for notifications)
# -------------------------------------------------------
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@genverse.ai
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME="Genverse.ai"
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# -------------------------------------------------------
# CORS
# -------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# -------------------------------------------------------
# Feature Flags
# -------------------------------------------------------
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_BACKGROUND_TASKS=False
